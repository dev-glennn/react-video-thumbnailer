{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx",

    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",

    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src/index.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "src/**/*.css.ts",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/main.tsx",
    "src/App.tsx"
  ]
}
